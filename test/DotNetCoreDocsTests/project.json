{
    "version": "1.0.0-*",
    "testRunner": "xunit",
    "dependencies": {
        "dotnet-test-xunit": "2.2.0-preview2-build1029",
        "xunit": "2.2.0-beta2-build3300",
        "DotNetCoreDocs": {
            "target": "project"
        },
        "Moq": "4.6.38-alpha"
    },
    "frameworks": {
        "netcoreapp1.0": {
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "type": "platform",
                    "version": "1.0.1"
                }
            }
        }
    },
    "buildOptions": {
        "copyToOutput": {
            "include": ["xunit.runner.json"]
        }
    },
    "tooling": {
        "defaultNamespace": "DotNetCoreDocsTests"
    },
    "tools": {
        "Microsoft.DotNet.Watcher.Tools": "1.0.0-preview3-final" // "1.1.0-preview4-final" for .NET Core 1.1.0
    }
}